  script. 
    function openNav() {
      document.getElementById("mySidenav").style.width = "33.33%";
    }
    function closeNav() {
      document.getElementById("mySidenav").style.width = "0";
    }
    document.querySelector('.hamburger').addEventListener('click', openNav);
    document.addEventListener('click', function(event) {
      var isClickInside = document.getElementById('mySidenav').contains(event.target);
      var isHamburgerClicked = document.querySelector('.hamburger').contains(event.target);
      if (!isClickInside && !isHamburgerClicked) {
        closeNav();
      }
    });
    window.addEventListener('resize', function() {
      if (window.innerWidth < 768) {
        closeNav();
      }
    });
